<!--pages/userPage/userPage.wxml-->
<view>
  <view class="Top" >
    <view class="sign" bindtap="sign">签到</view>
    <view class="get1000Points" bindtap="get1000Points">领取1000积分</view>
    <view class="image-block">
    <image class="touxiang" src="{{User.userAvatar}}" bindtap="clicktoUserPerson" ></image>
  </view>
    <view class="userID" bindtap="clicktoUserPerson">{{User.userName}}</view>
  </view>
  
  <view class="step-point">
    <view class="Container" bindtap="clicktoMyStep">
      <!-- 包含我的步数和图标，使其居中 -->
      <view class="makeContentMid">
        <view class="contentText">我的步数</view>
        <!-- 图标区域 -->
        <view class="LogoArea">
          <image class="Logo" src="http://1.14.144.194:8080/download2/images/step.png"></image>
        </view>
      </view>
    </view>
    <!-- <view class="apartLineArea"></view> -->
    <view class="Container" bindtap="clicktoMyPoint">
      <!-- 包含我的步数和图标，使其居中 -->
      <view class="makeContentMid">
        <view class="contentText">我的积分</view>
        <!-- 图标区域 -->
        <view class="LogoArea">
          <image class="Logo" src="http://1.14.144.194:8080/download2/images/point.png"></image>
        </view>
      </view>
    </view>
  </view>
  <view class="step-point">
    <view class="Container" bindtap="clicktoOrder">
      <!-- 包含我的步数和图标，使其居中 -->
      <view class="makeContentMid">
        <view class="contentText">我的订单</view>
        <!-- 图标区域 -->
        <view class="LogoArea">
          <image class="Logo" src="http://1.14.144.194:8080/download2/images/order.png"></image>
        </view>
      </view>
    </view>
    <!-- <view class="apartLineArea"></view> -->
    <view class="Container" bindtap="clickToClient">
      <!-- 包含我的步数和图标，使其居中 -->
      <view class="makeContentMid">
        <view class="contentText">我要宣传</view>
        <!-- 图标区域 -->
        <view class="LogoArea">
          <image class="Logo" src="http://1.14.144.194:8080/download2/images/advertise.png"></image>
        </view>
      </view>
    </view>
  </view>
</view>

