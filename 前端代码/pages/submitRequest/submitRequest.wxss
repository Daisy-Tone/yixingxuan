/* 遮罩 */
.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  background: #000;
  opacity: 0.6; 
  z-index: 1; 
}
/* 顶部 */
.Top{
  height: 300rpx;
  width: 100%;
  background-size: 100% 100%;
  background-image: url(http://1.14.144.194:8080/download2/yxx.jpg);
}
.avatar-block{
  display: inline;
}
.touxiang{
  height: 100rpx;
  width: 100rpx;
  border-radius: 100%;
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.userID{
  font-size: 28rpx;
  color: rgb(255, 255, 255);
  margin-left: 5rpx;
  display: inline;
}
/* 需求------------------- */
.request-block{
  margin-top: 50rpx;
  margin-left: 50rpx;
}
/* 填写推广产品信息 */
.adShop{
  margin-top: 5rpx;
  display: flex;
}
.introRequest{
  height: 280rpx;
  width: 450rpx;
  margin-left: 30rpx;
  border: solid #000 1rpx;
}
/* 选择衣服信息 */
.clothes-block{
  margin-top: 50rpx;
}
.clothesInfo{
  margin-top: 5rpx;
  margin-left: 50rpx;
}
/* 显示选择结果 */
.chooseResult{
  margin-left: 50rpx;
  color:#777777
}


/* 弹窗内容------------------ */
.isRuleShow{
  display: block;
}
.isRuleHide{
  display: none;
}
.modal{
  height: 60%;
  width: 80%;
  position:fixed;  
  top:50%;  
  left:50%;  
  transform:translateX(-50%) translateY(-50%);
  z-index: 2;
  border: solid #38aaf3 1rpx;
  background-color: rgb(255, 255, 255);
  border-top-right-radius: 5%;
  border-top-left-radius: 5%;
  border-bottom-right-radius: 5%;
  border-bottom-left-radius: 5%;
}
.line{
  width: 70rpx;
  height: 10rpx;
  margin-top: 10rpx;
  background-color:#38aaf3;
}
/* 款式-数量选择 */
.deside-block{
  margin-top: 15rpx;
  margin-left: 6%;
}
.cloDetailTitle{
  margin-top: 10rpx;
  font-size: 20px;
  color: #38aaf3;
}
.title{
  margin-top: 5rpx;
  font-size: 16px;
  color: #38aaf3;
}
.checkItems{
  display: flex;
  margin-top: 15rpx;
}
.cloNum{
  width: 20%;
  border: #38aaf3 solid 1rpx;
}
.style-num{
  margin-left: 40rpx;
  display: flex;
}
.inputNum-block{
  display: flex;
}
.input-block{
  display: flex;
  margin-left: 20%;
}
.icon{
  width: 45rpx;
  height: 45rpx;
}
.input-border{
  width: 140rpx;
  border: #38aaf3 solid 1rpx;
}
.tip{
  color: rgb(192, 192, 192);
  font-size: 12px;
  margin-top: 10rpx;
}
/* 选择尺码 */
.checkBox{
  display: flex;
  width: 300rpx;
}
.checkItems{
  margin-left: 34rpx;
}
/* 取消/确认 */
.no{
  bottom: 0;
  margin-left: 15%;
  margin-top: 60rpx;
}
.yes{
  bottom: 0;
  float: right;
  margin-top: 60rpx;
  margin-right: 15%;
}