/* 遮罩 */
.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.7; 
  z-index: 1; 
}
/* 显示标题部分 */
.title-price{
  display: flex;
}
.title-block{
  width: 450rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
}
/* 显示积分、价格部分 */
.point-price{
  height: 180rpx;
}
.block{
  float: right;
  margin-right: 30rpx;
  margin-top: 10rpx;
  color: #38aaf3;
}
.point-block,.price-block{
  display: flex;
  margin-left: 30rpx;
}
.choose-block{
  margin-left: 50rpx;
  margin-top: 50rpx;
}
.icon{
  width: 45rpx;
  height: 45rpx;
  margin-top: 5rpx;
}
.swiper{
  height: 600rpx;
}
.images{
  width:100%;
  height:100%;
}
/* 购买按钮 */
.buy{
  width: 150rpx;
  color: #fff;
  text-align: center;
  float: right;
  margin-right: 30rpx;
  background-color: #38aaf3;
  border-top-left-radius: 10%;
  border-top-right-radius: 10%;
  border-bottom-left-radius: 10%;
  border-bottom-right-radius: 10%;
}
/* 评价 */
.evaluate-block{
  display: flex;
  margin-top: 100rpx;
  margin-left: 30rpx;
}
.evaluate{
  height: 60rpx;
  line-height: 60rpx;
}
.evaluateInput{
  display: flex;
}
.inputText{
  width: 400rpx;
  margin-left: 50rpx;
  border:solid #38aaf3 1rpx;
}
.evaluateBtn{
  height: 58rpx;
  width: 100rpx;
  color: white;
  margin-left: 5rpx;
  border-radius: 10rpx;
  text-align: center;
  background-color: #38aaf3;
}
.apartLine{
  margin-top: 20rpx;
  margin-left: 10%;
  width: 80%;
  height: 1rpx;
  background-color: #000;
}
.comment{
  width: 100%;
  margin-top: 1rpx;
  padding: 0 10rpx;
  background-color: white;
  box-shadow: 2rpx 2rpx 3rpx 3rpx #EBEBEB;
}
.content{
  font-size: 13px;
}
/* 显示弹窗 */
.isRuleShow{
  display: block;
}
/* 隐藏弹窗 */
.isRuleHide{
  display: none;
}
/* 购买弹窗 */
.buyPage{
  height: 75%;
  width: 100%;
  bottom: 0;
  position: fixed;
  border: solid #38aaf3 1rpx;
  background-color: #fff;
  border-top-right-radius: 5%;
  border-top-left-radius: 5%;
  z-index: 2;
}
/* 关闭 */
.close-block{
  height: 120rpx;
}
.closeIcon{
  width: 45rpx;
  height: 45rpx;
  float: right;
  margin-top: 10rpx;
  margin-right: 10rpx;
}
/* 根据选择显示图片 */
.showImage{
  width: 130rpx;
  height: 130rpx;
  margin-top: 40rpx;
  margin-left: 50rpx;
}
.detail-block{
  display: flex;

}
/* 选择款式 / 颜色 / 尺码 */
.detail {
  width: 120rpx;
  padding: 4% 0;
  display: flex;
  flex-wrap: wrap;
}
.detail>text {
  background-color: #f7f7f7;
  padding: 1% 3%;
  margin: 2%;
  border-radius: 40rpx;
  font-size: 30rpx;
}
 
.detail>text:first-child{
  margin-left: 0;
}
/* 选择数量 */
.chooseNum-block{
  display: flex;
  margin-left: 550rpx;
}
.showNum{
  width: 60rpx;
  height: 20rpx;
  border:solid #38aaf3 1rpx;
}
.totalPrice{
  margin-top: 10rpx;
  margin-left: 450rpx;
}
/* 提交 */
.summit{
  width: 160rpx;
  color: #fff;
  text-align: center;
  float: right;
  margin-top: 15rpx;
  margin-right: 30rpx;
  background-color: #38aaf3;
  border-top-left-radius: 10%;
  border-top-right-radius: 10%;
  border-bottom-left-radius: 10%;
  border-bottom-right-radius: 10%;
}

/* 测试模块 */
/*全部属性的主盒子*/
.commodity_attr_list { 
  background: #fff; 
  padding: 50rpx 50rpx; 
  font-size: 26rpx; 
  overflow: hidden; 
  width: 100%; 
 } 
 /*每组属性的主盒子*/
 .attr_box { 
  width: 100%; 
  overflow: hidden; 
  border-bottom: 1rpx solid #ececec; 
  display: flex;
  flex-direction: column;
 } 
 /*属性名*/
 .attr_name { 
  width: 20%; 
  float: left; 
  padding: 15rpx 0; 
 } 
 /*属性值*/
 .attr_value_box { 
  width: 80%; 
  float: left; 
  padding: 15rpx 0; 
  overflow: hidden; 
 } 
 /*每个属性值*/
 .attr_value { 
  float: left; 
  padding: 0 30rpx; 
  margin: 10rpx 10rpx; 
  border: 1rpx solid #ececec; 
  border-radius:5px;
  line-height:30px;
 } 
 /*每个属性选中的当前样式*/
 .attr_value_active { 
  border-radius: 10rpx; 
  color: #0089dc; 
  padding: 0 30rpx; 
  border: 1rpx solid #0089dc; 
  /* background: #fff;  */
 } 
 /*禁用属性*/
 .attr_value_disabled { 
  color: #ccc; 
 } 
   
 /*button*/
 .weui-btn-area { 
  margin: 1.17647059em 15px 0.3em; 
 } 
 .weui-btn{
  width: 80%;
  height: 100rpx;
  border-radius: 3rpx; 
  background-color:#0089dc; 
  color: #fff; 
 }